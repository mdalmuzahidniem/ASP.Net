<table class="table table-hover">
    <tr>
        <td>Id</td><td>Name</td><td>Price</td><td>Quantity</td><td>Quality</td>
    </tr>
    @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td><td>@s.Name</td><td>@s.Price</td><td>@s.Quantity</td><td>@s.Description</td><td><a href="/Product/Cart/@s.Id" class="btn btn-primary">Add To Cart</a></td>
                </tr>
            }
    
</table>
<a href="/Product/Checkout" class="btn btn-primary">Check out</a>
